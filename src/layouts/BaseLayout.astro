---
import "@fontsource/gabarito";
import AppShell from "../components/app/AppShell.astro";
import themeConfig from "@util/themeConfig";
import "../styles/global.css";

const { slug } = Astro.params;
const { title } = Astro.props;
const siteTitle = themeConfig.general.title;

const calculatedTitle = title || siteTitle;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'><path d='M12 2v20M2 12h20M7 7h10v10H7z'/></svg>" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{calculatedTitle}</title>
    <meta name="title" content="MIT Licensed Open Source Projects for Commercial Use | RepoRaft" />
    <meta name="description" content="MIT licensed projects you can use, modify, and sell commercially: CRMs, ERPs, analytics, SaaS starters. No attribution required. Free forever." />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://reporaft.com/" />
    <meta property="og:title" content="MIT Licensed Open Source Projects for Commercial Use | RepoRaft" />
    <meta property="og:description" content="MIT licensed projects you can use, modify, and sell commercially: CRMs, ERPs, analytics, SaaS starters. No attribution required. Free forever." />
    <meta property="og:image" content="https://metatags.io/images/meta-tags.png" />
    
    <!-- X (Twitter) -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://reporaft.com/" />
    <meta property="twitter:title" content="MIT Licensed Open Source Projects for Commercial Use | RepoRaft" />
    <meta property="twitter:description" content="MIT licensed projects you can use, modify, and sell commercially: CRMs, ERPs, analytics, SaaS starters. No attribution required. Free forever." />
    <meta property="twitter:image" content="https://metatags.io/images/meta-tags.png" />
    
    <link rel="stylesheet" href="https://cdn.indieboosting.com/latest/style.css"/>
  </head>
  <body class="bg-white dark:bg-gray-800">
    <div id="indie-boost-ad"></div>
    <AppShell>
      <div class="container mx-auto px-4 py-4">
        
      </div>
      <slot />
    </AppShell>
    <script is:inline src="https://cdn.indieboosting.com/latest/script.js?id=5RYQ6RYP7Q"></script>
    <script is:inline>
      window.addEventListener('load', function() {
        if (typeof IndieBoost !== 'undefined') {
          IndieBoost.init();
        }
      });
    </script>
  </body>
</html>
